// Schema untuk Vercel Postgres / Neon / Supabase
// Rename file ini menjadi schema.prisma sebelum deploy ke Vercel

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL") // Untuk Vercel Postgres
}

generator client {
  provider = "prisma-client-js"
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String? @db.Text
  access_token       String? @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String? @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ==========================================
// TABUNGAN KELUARGA MODELS
// ==========================================

model FamilyMember {
  id           String        @id @default(cuid())
  name         String
  role         String
  avatar       String?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  transactions Transaction[]
}

model SavingsCategory {
  id            String        @id @default(cuid())
  name          String
  description   String?
  icon          String?
  color         String?
  targetAmount  Float?

  storageTypeId String?
  storageType   StorageType?  @relation(fields: [storageTypeId], references: [id], onDelete: SetNull)

  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  transactions  Transaction[]
}

model ExpenseCategory {
  id            String        @id @default(cuid())
  name          String
  description   String?
  icon          String?
  color         String?
  budgetLimit   Float?

  storageTypeId String?
  storageType   StorageType?  @relation(fields: [storageTypeId], references: [id], onDelete: SetNull)

  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  transactions  Transaction[]
}

model StorageType {
  id                String            @id @default(cuid())
  name              String
  description       String?
  icon              String?
  color             String?
  accountNumber     String?
  balance           Float             @default(0)
  
  // Gold storage fields
  isGold            Boolean           @default(false)
  goldWeight        Float?            // Weight in grams
  
  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @updatedAt
  savingsCategories SavingsCategory[]
  expenseCategories ExpenseCategory[]
  transactionsFrom  Transaction[]     @relation("TransactionFrom")
  transactionsTo    Transaction[]     @relation("TransactionTo")
}

model Transaction {
  id                String           @id @default(cuid())
  type              String
  amount            Float
  description       String?
  date              DateTime         @default(now())

  familyMemberId    String?
  familyMember      FamilyMember?    @relation(fields: [familyMemberId], references: [id], onDelete: SetNull)

  savingsCategoryId String?
  savingsCategory   SavingsCategory? @relation(fields: [savingsCategoryId], references: [id], onDelete: SetNull)

  expenseCategoryId String?
  expenseCategory   ExpenseCategory? @relation(fields: [expenseCategoryId], references: [id], onDelete: SetNull)

  fromStorageTypeId String?
  fromStorageType   StorageType?     @relation("TransactionFrom", fields: [fromStorageTypeId], references: [id], onDelete: SetNull)

  toStorageTypeId   String?
  toStorageType     StorageType?     @relation("TransactionTo", fields: [toStorageTypeId], references: [id], onDelete: SetNull)

  createdAt         DateTime         @default(now())
  updatedAt         DateTime         @updatedAt
}
