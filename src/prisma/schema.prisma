datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider        = "prisma-client-js"
  binaryTargets   = ["native", "debian-openssl-3.0.x", "linux-arm64-openssl-1.1.x", "rhel-openssl-3.0.x"]
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?
  access_token       String?
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ==========================================
// TABUNGAN KELUARGA MODELS
// ==========================================

model FamilyMember {
  id           String        @id @default(cuid())
  name         String
  role         String        // Ayah, Ibu, Anak, dll
  avatar       String?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  transactions Transaction[]
}

model SavingsCategory {
  id            String        @id @default(cuid())
  name          String
  description   String?
  icon          String?
  color         String?       // Warna untuk UI
  targetAmount  Float?        // Target tabungan (opsional)

  // Relasi ke Jenis Simpan
  storageTypeId String?
  storageType   StorageType?  @relation(fields: [storageTypeId], references: [id], onDelete: SetNull)

  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  transactions  Transaction[]
}

model ExpenseCategory {
  id            String        @id @default(cuid())
  name          String
  description   String?
  icon          String?
  color         String?
  budgetLimit   Float?        // Batas anggaran bulanan (opsional)

  // Relasi ke Jenis Simpan
  storageTypeId String?
  storageType   StorageType?  @relation(fields: [storageTypeId], references: [id], onDelete: SetNull)

  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  transactions  Transaction[]
}

model StorageType {
  id                    String            @id @default(cuid())
  name                  String            // Cash, Bank BCA, Bank Mandiri, GoPay, OVO, dll
  description           String?
  icon                  String?
  color                 String?
  accountNumber         String?           // Nomor rekening (opsional)
  balance               Float             @default(0) // Saldo saat ini
  createdAt             DateTime          @default(now())
  updatedAt             DateTime          @updatedAt
  savingsCategories     SavingsCategory[]
  expenseCategories     ExpenseCategory[]
  transactionsFrom      Transaction[]     @relation("TransactionFrom")
  transactionsTo        Transaction[]     @relation("TransactionTo")
}

model Transaction {
  id                String           @id @default(cuid())
  type              String           // 'income' | 'expense' | 'savings' | 'transfer'
  amount            Float
  description       String?
  date              DateTime         @default(now())

  // Relations
  familyMemberId    String?
  familyMember      FamilyMember?    @relation(fields: [familyMemberId], references: [id], onDelete: SetNull)

  savingsCategoryId String?
  savingsCategory   SavingsCategory? @relation(fields: [savingsCategoryId], references: [id], onDelete: SetNull)

  expenseCategoryId String?
  expenseCategory   ExpenseCategory? @relation(fields: [expenseCategoryId], references: [id], onDelete: SetNull)

  // Transfer relations - untuk transfer antar simpanan
  fromStorageTypeId String?
  fromStorageType   StorageType?     @relation("TransactionFrom", fields: [fromStorageTypeId], references: [id], onDelete: SetNull)

  toStorageTypeId   String?
  toStorageType     StorageType?     @relation("TransactionTo", fields: [toStorageTypeId], references: [id], onDelete: SetNull)

  createdAt         DateTime         @default(now())
  updatedAt         DateTime         @updatedAt
}
